.textContent {
  width: 86%;
  height: 380rpx;
  position: relative;
  margin: 20rpx;
}
.textContent textarea {
    width: 100%;
    height: 100%;
    padding-top: 50rpx;
    padding-left: 50rpx;
    font-size: 30rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: 400;
    color: #000;
    border: 2rpx solid #d2d2d2;
    border-radius: 10rpx;
}
.textContent textarea::-webkit-input-placeholder {
    /* WebKit browsers */
    font-size: 30rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: 400;
    color: #999999;
}
.textContent .tips {
    position: absolute;
    right: 30rpx;
    bottom: 26rpx;
    font-size: 24rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: 400;
    color: #999999;
}
.btnContent {
  padding: 0 40rpx;
  width: 86%;
}
.btnContent .btn {
    height: 80rpx;
    background: -webkit-gradient(linear, left top, right top, from(#3a30cf), to(#4168ee));
    background: -o-linear-gradient(left, #3a30cf, #4168ee);
    background: linear-gradient(90deg, #3a30cf, #4168ee);
    border-radius: 40rpx;
    margin-top: 110rpx;
    font-size: 28rpx;
    font-family: SourceHanSansSC-Regular;
    font-weight: 400;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    color: white;
}
.tip {
  width: 100%;
  margin: 26rpx;
  text-align: left;
  font-size: 28rpx;
  color: #999999;
}

